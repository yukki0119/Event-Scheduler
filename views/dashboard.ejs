<!DOCTYPE html>
<html>

<head>
  <title>Dashboard</title>
  <link rel="stylesheet" type="text/css" href="/dashboard.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link href='http://fonts.googleapis.com/css?family=Lato:400,700,900,300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800,600,300' rel='stylsheet' type='text/css'>
  <link href="https://fonts.googleapis.com/css?family=Montserrat:300,700" rel="stylesheet" type='text/css'>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/5d2ed13a15.js" crossorigin="anonymous"></script>
</head>

<body>

  <nav class="navbar navbar-expand-lg" id="dash-nav">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand"><%= currentUser.name()%>'s Dashboard</a>
      </div>

      <ul class="nav navbar-expand-md navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/<%=user.username%>/groups">My Groups</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/<%=user.username%>/create">Create Group</a>
        </li>
        <li class="nav-item" style="float:right; font-weight:bold;">
          <a class="nav-link" href="/logout">Logout</a>
        </li>

      </ul>

    </div>
  </nav>

        <div id="group-list">
           <div style="text-align:center; font-size:3em; font-color:black; ">
            <i class="fas fa-users"></i>
          </div>
          <h2>
            <%= currentUser.name() %>'s Groups
          </h2>
         
          

          <div class="group-bg">
            <% for (var i = 0; i < user.groups.length; i++) { %>
            <ul class="list-group" style="margin:10px;">
              
                <a href="/<%=user.username%>/<%=user.groups[i].groupId%>/<%=user.groups[i].isAdmin%>">
                  <li class="list-group-item">
                  <%= user.groups[i].groupname %>
                    <i class="fas fa-glass-cheers"></i>
              </li>
                </a>
                
            </ul>
            <% }; %>
          </div>
        </div>




</body>

</html>